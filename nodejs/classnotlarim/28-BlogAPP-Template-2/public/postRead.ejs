{%- include('components/header') %}
</div>
<!-- main start -->
<main class="container">
    <div class="row g-5">
        <div class="col-md-12 p-3">
            <!-- BlogPost Read -->

            {% if(user) { %}
            <div class="admin-area text-end">
                <a class="btn btn-sm btn-primary" href="/blog/posts/{%= post._id %}/update">Update</a>
                <a class="btn btn-sm btn-danger" href="/blog/posts/{%= post._id %}/delete"
                    onclick="return confirm('Are you sure?')">Delete</a>
                Published: {%= post.isPublished %}
            </div>
            {% } %}


            <article class="blog-post">
                <a href="/blog/posts?filter[blogCategoryId]={%= post.blogCategoryId._id %}"># {%=
                    post.blogCategoryId.name %}</a>
                <h2 class="display-5 mb-1">
                    <p class="link-body-emphasis text-decoration-none">{%= post.title %}</p>
                </h2>
                <p class="blog-post-meta">{%= post.createdAt.toUTCString() %}</p>
                {%- post.content %}
            </article>
        </div>
    </div>
</main>
<!-- main end -->

{%- include('components/footer') %}